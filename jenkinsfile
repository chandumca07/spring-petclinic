pipeline {
    agent any
    stages {
        stage('SCM') {
            steps {
                git url: 'https://github.com/chandumca07/spring-petclinic.git',
                    branch: 'main'
            }
        }
        stage('Package Tool') {
            tools {
                jdk 'JDK_8'
            }
            steps {
                sh "mvn package"
            }
        }
        stage('Publsh') {
            steps {
                archiveArtifacts artifacts: '**/target/spring-petclinic.jar',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }
        stage('Run')  {
            steps {
                sh 'java -jar target/*.jar'
            }
        }

        
    }
}